<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tv_sub_category_top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@null"
        android:drawableLeft="@mipmap/ump_header_back_btn_normal"
        android:drawableStart="@mipmap/ump_header_back_btn_normal"
        android:gravity="center|center_horizontal"
        android:paddingEnd="35dp"
        android:paddingLeft="0dp"
        android:paddingRight="35dp"
        android:paddingStart="0dp"
        android:text="@string/app_name_title"
        android:textColor="@color/text_black" />

    <View
        android:id="@+id/divider_of_sub_category"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_sub_category_top_title"
        android:background="@color/text_orange" />

    <GridView
        android:id="@+id/gv_sub_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider_of_sub_category"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:horizontalSpacing="1dp"
        android:numColumns="3"
        android:verticalSpacing="1dp" />

</RelativeLayout><!-- From: file:/C:/Users/Administrator.PC-20151112MNXJ/AndroidStudioProjects/MyApplication2/app/src/main/res/layout/sub_category_gridview.xml -->