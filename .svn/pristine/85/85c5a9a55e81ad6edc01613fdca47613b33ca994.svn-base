<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    >
    <TextView 
        android:layout_width="match_parent"
        android:drawableLeft="@mipmap/ump_header_back_btn_normal"
        android:drawableStart="@mipmap/ump_header_back_btn_normal"
        android:background="@null"
        android:layout_height="wrap_content"
        android:text="@string/app_name_title"
        android:gravity="center|center_horizontal"
        android:paddingRight="35dp"
        android:paddingLeft="0dp"
        android:paddingStart="0dp"
        android:paddingEnd="35dp"
        android:textColor="@color/text_black"
        android:id="@+id/tv_top_title"
       	android:layout_alignParentTop="true"
        />
    
	<View android:id="@+id/actionbar_bottom"
	     android:layout_below="@id/tv_top_title"
	     android:layout_width="match_parent"
	     android:layout_height="1dp"
	     android:background="@color/text_orange"
	     />
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/input_form_of_phone_login"
	    android:layout_below="@id/actionbar_bottom"
	    android:layout_marginTop="20dp"
	    
	     >
	    <EditText 
	       
	        android:id="@+id/et_phone_number"
	        android:inputType="phone"
	        android:hint="@string/input_phone_number"
	        android:layout_alignParentTop="true"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/text_white"
	        android:drawableLeft="@mipmap/icon_phone"
	        android:drawableStart="@mipmap/icon_phone"
	        android:drawablePadding="10dp"
	        android:padding="10dp"
	        />
	    <View 
	        android:layout_below="@id/et_phone_number"
	        android:layout_marginLeft="10dp"
	        android:layout_marginStart="10dp"
	        android:background="#999999"
	        android:layout_width="match_parent"
	        android:layout_height="0.5dp"
	        android:id="@+id/divier1"
	        />
		<LinearLayout android:layout_below="@id/divier1"
		     android:orientation="horizontal"
		     android:layout_width="match_parent"
		     android:id="@+id/ll_check_code"
		     android:layout_height="wrap_content"
		     >
	    <EditText 
	       android:layout_weight="2"
	        android:id="@+id/et_phone_check_code"
	        android:inputType="text"
	        android:hint="@string/input_check_code"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:background="@color/text_white"
	        android:drawableLeft="@mipmap/icon_review_edit"
	        android:drawableStart="@mipmap/icon_review_edit"
	        android:drawablePadding="10dp"
	        android:padding="10dp"
	        
	        />
	    <TextView 
	        android:layout_marginLeft="0.5dp"
	        android:layout_marginStart="0.5dp"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:id="@+id/tv_get_check_code"
	        android:gravity="center"
	        android:text="@string/get_check_code"
	        android:background="@color/white_backgroud"
	        />
	   </LinearLayout>
	    <View 
	        android:layout_below="@id/ll_check_code"
	        android:background="#999999"
	        android:layout_width="match_parent"
	        android:layout_height="0.5dp"
	        android:id="@+id/divier3"
	        />
	    <EditText 
	       
	        android:id="@+id/et_acount_password"
	        android:inputType="textPassword"
	        android:hint="@string/password"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
			android:layout_below="@id/divier3"
	        android:background="@color/text_white"
	        android:drawableLeft="@mipmap/icon_review_edit"
	        android:drawableStart="@mipmap/icon_review_edit"
	        android:drawablePadding="10dp"
	        android:padding="10dp"
	        />
	</RelativeLayout>
        <Button 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_margin="15dp"
	            android:background="@drawable/login_btn_bg_selector"
	            android:id="@+id/btn_phone_login_to_dianping"
	            android:text="@string/phone_fast_login"
	            android:gravity="center"
	            android:layout_below="@id/input_form_of_phone_login"
	            android:textColor="@color/text_white"
	            />
			
				    
</RelativeLayout>