<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/title_viewpager"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:background="@color/white_backgroud" />

    <View
        android:id="@+id/red_divider_in_home_page"
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:layout_below="@id/title_viewpager"
        android:background="#ff0000" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_home_fragment_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/red_divider_in_home_page"
        android:layout_marginBottom="40dp" />

</RelativeLayout>